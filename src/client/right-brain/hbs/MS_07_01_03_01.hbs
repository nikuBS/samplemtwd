<div class="popup-page tw-popup fixed-bottom h60 nobg">
    <!-- 하단에 fixed 버튼으로 여백이 필요할때 .fixed-bottom 기본60여백 / 높이 30단위 class 지원 .h30, .h60, .h90 ... 기본배경색은 white, 회색배경색은 .nobg -->
    <!-- #header -->
    <div class="header-wrap">
        <div class="page-header">
            <div class="header-ti">
                <h1>데이터 나눠쓰기</h1>
            </div>
        </div>
    </div>
    <!--// #header -->
    <!-- .container-wrap -->
    <div class="container-wrap">
        <h2 class="blind">내용</h2>
        <div class="container">
            <!-- .cont-box -->
            <div class="cont-box nogaps">
                <h3 class="tit-type1">받는 분 선택</h3>
                <!-- .list-comp-input -->
                <div class="list-comp-input type2">
                    <div class="widget">
                        <div class="widget-box radio">
                            <ul class="select-list" role="group">
                                {{#each members}}
                                <li class="radiobox type01 {{#if @first}}checked{{/if}}" role="radio" aria-checked="{{#if @first}}true{{else}}false{{/if}}" data-index={{@index}}>
                                    <!-- 체크 상태일 경우 .checked 클래스 추가, aria-checked="true" -->
                                    <input type="radio" name="radio" value="" title="{{custNm}}" aria-labelledby="aria-comp-radio1" {{#if @first}}checked{{/if}}><!-- 체크상태일 경우 checked="checked" -->
                                    <div class="comp-list-layout" id="aria-comp-radio1" aria-hidden="true">
                                        <p class="layout-text">
                                            <span class="mtext">{{custNm}}<i class="badge badge-{{badge}}"><span class="blind">{{relClNm}}</span></i>
                                            <span class="stext">{{#if membOfrPt}}{{membOfrPt}}MB받음{{else}}받은 적 없음{{/if}}</span>
                                        </p>
                                    </div>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
                <!--// .list-comp-input -->
            </div>
            <!--// .cont-box -->

            <hr class="cont-sp type1" aria-hidden="true" />

            <!-- .cont-box -->
            <div class="cont-box">
                <div class="tit-wrap2">
                    <h3 class="tit">나눠쓰기 할 데이터 량</h3>
                    <p class="stxt">한도 : {{remainAmount}}MB 남음</p>
                </div>
                <!-- .widget -->
                <div class="widget">
                    <div class="widget-box radio">
                        <div class="radio-slide small">
                            <ul class="select-list" role="radiogroup">
                                {{#each amounts}}
                                <li class="radiobox {{#if checked}}checked{{/if}}" role="radio" aria-checked="{{#if checked}}true{{else}}false{{/if}}">
                                    <input type="radio" name="radio1" value="" title="{{value}}MB" {{#if disabled}}disabled{{/if}} {{#if checked}}checked{{/if}} />
                                    <span class="radio-txt">
                                        <span class="fe-value">{{value}}</span><span class="unit">MB</span>
                                    </span>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
                <!--// .widget -->
            </div>
            <!--// .cont-box -->

            <hr class="cont-sp type1" aria-hidden="true" />
            <!-- TBD -->
            <img src="/img/dummy/DC_02_TBD2.jpg" alt="이용안내 노출 영역" style="width:100%;vertical-align: top;">

            <div class="bt-fixed-area">
                <ul class="bt-slice full">
                    <li class="bt-red1">
                        <button disabled>나눠쓰기</button><!-- 활성화시 disabled 속성 삭제 -->
                    </li>
                </ul>
            </div>

        </div>
    </div>
    <!-- // .container-wrap -->
    <!-- .popup-closeBtn -->
    <button class="prev-step tw-popup-closeBtn">취소</button>
    <!--// .popup-closeBtn -->
</div>
<!-- // .popup hbs -->