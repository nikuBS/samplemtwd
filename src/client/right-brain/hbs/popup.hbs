<div class="popup tw-popup">
    <div class="popup-info" role="alertdialog" {{#if title}}aria-labelledby="alertHeading"{{/if}} aria-describedby="alertText">
        <div class="popup-header">
            {{#if ico}}
            <span class="ico {{ico}}"></span>
            {{/if}}
            {{#if title}}
            <h5 class="popup-title {{title_type}}" id="alertHeading">{{{title}}}</h5>
            {{/if}}
        </div>
        <div class="popup-contents {{notice_has}}" id="alertText">
            <div class="inner-contents">
                <p class="{{cont_align}}">{{{contents}}}</p>
            </div>
            {{#if link_list}}
            <ul class="link-list">
                {{#link_list}}
                <li><button class="{{link}}">{{txt}}</button></li>
                {{/link_list}}
            </ul>
            {{/if}}
            {{#if notice_list}}
            <ul class="notice-list">
                {{#notice_list}}
                <li>
                    <dl>
                        <dt>{{{tit}}}</dt>
                        <dd>{{{con}}}</dd>
                    </dl>
                </li>
                {{/notice_list}}
            </ul>
            {{/if}}
        </div>
        {{#if bt}}
        <div class="btn-box">
            <ul class="bt-slice">
            {{#bt}}
            <li class="{{style_class}}">
              <button>{{txt}}</button>
            </li>
            {{/bt}}
            </ul>
        </div>
        {{/if}}
        {{#if bt_b}}
            <ul class="bt-bottom">
                {{#bt_b}}
                <li class="{{style_class}}">
                   <button>{{txt}}</button>
                </li>
                {{/bt_b}}
            </ul>
        {{/if}}
    </div>
    <div class="popup-blind"></div>
</div>
