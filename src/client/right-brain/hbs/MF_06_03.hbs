<div class="popup-page tw-popup fixed-bottom h60">
    <!-- #header -->
    <div class="header-wrap">
        <div class="page-header">
            <div class="header-ti">
                <h1>선결제</h1>
            </div>
        </div>
    </div>
    <!--// #header -->
    <!-- .container-wrap -->
    <div id="contents" class="container-wrap">
        <h2 class="blind">내용</h2>
        <div class="container">
            <!-- .cont-box -->
            <div class="cont-box nogaps-top">
                <div class="data-result">
                    <p class="tit">선결제 가능 최대금액 </p>
                    <p class="data"><em class="fe-max-amount"></em><span>원</span></p>
                </div>

                <ul class="form-data-list mt26">
                    <li>
                        <label class="tit" for="flab01">선결제 금액</label>
                        <span class="inputbox">
                            <span class="input">
                              <input id="flab01" class="fe-prepay-amount required-input-field" type="number"
                                     inputmode="numeric" min="0" pattern="[0-9]*" placeholder="1만원 단위 (숫자만 입력)" />
                              <button class="cancel"><span class="blind">삭제</span></button>
                            </span>
                        </span>
                    </li>
                </ul>
            </div>
            <!--// .cont-box -->
            <hr class="cont-sp type1" aria-hidden="true"/>
            <!-- .cont-box -->
            <div class="cont-box">
                <ul class="form-data-list">
                    <li>
                        <label class="tit" for="flab02">카드주명</label>
                        <span class="inputbox">
                            <span class="input">
                              <input id="flab02" class="fe-name" type="text" value="" readonly />
                              <button class="cancel"><span class="blind">삭제</span></button>
                            </span>
                        </span>
                    </li>
                    <li>
                        <label class="tit">납부형태</label>
                        <button id="00" class="bt-dropdown big fe-select-card-type" title="납부형태" aria-haspopup="true">일시불<span class="ico"></span></button>
                    </li>
                    <li>
                        <label class="tit" for="flab04">카드번호</label>
                        <span class="inputbox">
                            <span class="input">
                              <input id="flab04" class="fe-card-number required-input-field" type="number" inputmode="numeric" min="0" pattern="[0-9]*" placeholder="숫자만 입력" />
                              <button class="cancel"><span class="blind">삭제</span></button>
                            </span>
                        </span>
                    </li>
                    <li>
                        <label class="tit" for="flab05">유효기간</label>
                        <div class="input-wrap-half">
                            <span class="inputbox">
                                <span class="input">
                                    <input id="flab05" class="fe-card-y required-input-field" type="number" inputmode="numeric" min="0" pattern="[0-9]*"
                                           placeholder="YYYY" title="유효 년" maxlength="4">
                                    <button class="cancel" style="display: none;"><span class="blind">삭제</span></button>
                                </span>
                            </span>
                            <span class="inputbox">
                                <span class="input">
                                    <input class="fe-card-m required-input-field" type="number" inputmode="numeric" min="0" pattern="[0-9]*"
                                           placeholder="MM" title="유효 월" maxlength="2">
                                    <button class="cancel" style="display: none;"><span class="blind">삭제</span></button>
                                </span>
                            </span>
                        </div>
                    </li>
                    <li>
                        <label class="tit" for="flab06">비밀번호</label>
                        <span class="inputbox">
                            <span class="input">
                              <input id="flab06" type="password" class="fe-card-pw required-input-field" inputmode="numeric" min="0" pattern="[0-9]*"
                                     placeholder="앞 2자리" maxlength="2" />
                              <button class="cancel"><span class="blind">삭제</span></button>
                            </span>
                        </span>
                    </li>
                </ul>
            </div>
            <!--// .cont-box -->
            <div class="bt-fixed-area">
                <ul class="bt-slice full">
                    <li class="bt-red1">
                        <button class="fe-check-pay" disabled="disabled">납부하기</button><!--기본 상태 비활성화 disabled 모든 정보입력시 disabled 속성 제거 -->
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!--// .container-wrap -->
    <!-- .popup-closeBtn -->
    <button class="prev-step tw-popup-closeBtn">취소</button>
    <!--// .popup-closeBtn -->
</div>
