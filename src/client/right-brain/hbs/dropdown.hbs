<div class="popup">
    <div class="popup-dropdown" role="alertdialog">
        <div class="popup-contents" id="alertText">
            <div class="widget dropdown-list">
                <div class="widget-box radio">
                    <ul class="select-list" role="radiogroup">
                        {{#each list}}
                        <li class="radiobox type02 {{option}} {{representation}} {{dimmed}}" role="radio" aria-checked="true">
                            <input type="radio" name="droplist" value="" title="{{txt}}" {{option}} />
                            <span class="txt">{{txt}}</span><span class="ico"></span><span class="line">{{line}}</span>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            <button class="bt-more">더보기(20)</button>
        </div>
        <div class="btn-box">
            <ul class="bt-slice full align-r">
                <li class="bt-blue1">
                  <button>{{bt_txt}} <span class="ico"></span></button>
                </li>
            </ul>
        </div>
    </div>
    <div class="popup-blind"></div>
</div>
