<div class="popup tw-popup">
    <div class="popup-page nobg layer"><!-- .no-btn 하단에 버튼이 없을 경우 -->
        <!-- #header -->
        <div class="header-wrap">
            <div class="page-header">
                <div class="header-ti align-l">
                    <h1>{{title}}</h1>
                </div>
            </div>
        </div>
        <!--// #header -->
        <!-- .container-wrap -->
        <div class="container-wrap">
            <h2 class="blind">내용</h2>
            <div class="container">
                {{#each data}}
                {{#if @index}}
                <hr class="cont-sp type1" aria-hidden="true"/>
                {{/if}}
                <!-- .cont-box -->
                <div class="cont-box nogaps noborder">
                    {{#if type}}<p class="link-long-ti">{{type}}</p>{{/if}}
                    <ul class="link-long-list">
                        {{#each list}}
                        <li class="{{option}}">
                            <div class="link-long">
                                <button>{{{value}}}
                                    {{#if explain}}
                                    <p class="tx-explain">{{{explain}}}</p>
                                    {{/if}}
                                    <span class="tx-sub">
                                        {{#if text1}}<span class="normal">{{{text1}}}</span>{{/if}}
                                        {{#if text2}}
                                            {{{text2}}}
                                            <span class="bar">{{bar}}</span>
                                            <span class="point">{{{point}}}</span>
                                        {{/if}}
                                        <span class="ico"></span>
                                    </span>
                                </button>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <!--// .cont-box -->
                {{/each}}
            </div>
        </div>
        <!--// .container-wrap -->
        <!-- .popup-closeBtn -->
        <button class="popup-closeBtn"><span class="blind">팝업 페이지 닫기</span></button>
        <!--// .popup-closeBtn -->
    </div>
    <div class="popup-blind"></div>
</div>
