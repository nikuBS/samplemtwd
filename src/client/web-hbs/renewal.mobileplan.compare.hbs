 <!-- .popup hbs -->
<div class="popup-page tod-nmp-pop-compare" style="padding-top:149px;">
    <!-- #header -->
    <div class="header-wrap">
        <div class="page-header">
            <div class="header-ti">
                <h1>요금제 비교하기</h1>
            </div>
        </div>
        <div class="tod-nmp-comp-header">
            <div class="comp-inner">
                <div class="p-my-plan">
                    <p class="tit">나의 요금제</p>
                    <p class="name">{{data.curPlan.prodNm}}</p>
                    <p class="price">{{data.curPlan.basFeeAmt}}</p>
                </div>
                <div class="p-comp-plan">
                    <p class="tit">비교 요금제</p>
                    <p class="name">{{data.comparePlan.prodNm}}</p>
                    <p class="price">{{data.comparePlan.basFeeAmt}}</p>
                </div>
            </div>
        </div>
    </div>
    <!--// #header -->
    <!-- .container-wrap -->
    <div class="container-wrap">
        현재 비교하기 하드코딩 (Api 없음)
        <!-- 접근성 : 항목마다 tod-blind 대체텍스트 제공 (나의 요금제명과 비교 요금제명을 각각 명시) -->
        <section class="tod-nmp-comp-info">
            <div class="rn-comp-box">
                <h3 class="title"><i class="p-icon16-data"></i> 데이터</h3>
                <div class="noti-box">
                    <p>{{{data.compareData}}}</p>
                </div>
                <div class="rn-comp-graph">
                    <div class="graph-cont {{data.graphData.graphClass}}">
                        <div class="p-graph my">
                            <p class="tod-blind">{{data.curPlan.prodNm}}</p>
                            <ul class="unit" aria-hidden="true">
                                {{#if data.graphData.is5GX}}
                                    <li><em>무제한</em></li>
                                    <li class="sm"><em>200GB</em></li>
                                    <li class="sm"><em>150GB</em></li>
                                    <li><em>100GB</em></li>
                                    <li class="sm"><em>70GB</em></li>
                                    <li class="sm"><em>40GB</em></li>
                                    <li><em>10GB</em></li>
                                    <li class="sm"><em>5GB</em></li>
                                    <li><em>0GB</em></li>
                                {{else}}
                                    <li><em>무제한</em></li>
                                    <li class="sm"><em>200GB</em></li>
                                    <li class="sm"><em>150GB</em></li>
                                    <li><em>100GB</em></li>
                                    <li class="sm"><em>70GB</em></li>
                                    <li class="sm"><em>40GB</em></li>
                                    <li><em>10GB</em></li>
                                    <li class="sm"><em>7GB</em></li>
                                    <li class="sm"><em>4GB</em></li>
                                    <li><em>1GB</em></li>
                                    <li class="sm"><em>750MB</em></li>
                                    <li class="sm"><em>500MB</em></li>
                                    <li class="sm"><em>250MB</em></li>
                                    <li><em>0MB</em></li>
                                {{/if}}
                            </ul>
                            <div class="shapes">
                                <span class="bar" style="height:{{data.curPlan.chartData}}%"><span class="data">{{data.curPlan.basOfrDataQtyCtt.value}}
                                    {{#if data.curPlan.basOfrDataQtyCtt.unit}}
                                        {{data.curPlan.basOfrDataQtyCtt.unit}}
                                    {{/if}}
                                </span></span>
                                <span class="txt">{{{data.curPlan.speedControl}}}</span>
                            </div>
                        </div>
                        <div class="p-graph select">
                            <p class="tod-blind">{{data.comparePlan.prodNm}}</p>
                            <ul class="unit" aria-hidden="true">
                                {{#if data.graphData.is5GX}}
                                    <li><em>무제한</em></li>
                                    <li class="sm"><em>200GB</em></li>
                                    <li class="sm"><em>150GB</em></li>
                                    <li><em>100GB</em></li>
                                    <li class="sm"><em>70GB</em></li>
                                    <li class="sm"><em>40GB</em></li>
                                    <li><em>10GB</em></li>
                                    <li class="sm"><em>5GB</em></li>
                                    <li><em>0GB</em></li>
                                {{else}}
                                    <li><em>무제한</em></li>
                                    <li class="sm"><em>200GB</em></li>
                                    <li class="sm"><em>150GB</em></li>
                                    <li><em>100GB</em></li>
                                    <li class="sm"><em>70GB</em></li>
                                    <li class="sm"><em>40GB</em></li>
                                    <li><em>10GB</em></li>
                                    <li class="sm"><em>7GB</em></li>
                                    <li class="sm"><em>4GB</em></li>
                                    <li><em>1GB</em></li>
                                    <li class="sm"><em>750MB</em></li>
                                    <li class="sm"><em>500MB</em></li>
                                    <li class="sm"><em>250MB</em></li>
                                    <li><em>0MB</em></li>
                                {{/if}}
                            </ul>
                            <div class="shapes">
                                <span class="bar" style="height:{{data.comparePlan.chartData}}%;"><span class="data">{{{data.comparePlan.basOfrDataQtyCtt.value}}}
                                    {{#if data.comparePlan.basOfrDataQtyCtt.unit}}
                                        {{{data.comparePlan.basOfrDataQtyCtt.unit}}}
                                    {{/if}}
                                </span></span>
                                <span class="txt">{{{data.comparePlan.speedControl}}}</span>
                            </div>
                        </div>
                    </div>
                </div>
                {{#if data.dataAddtionOption}}
                    <div class="rn-shadow-box">
                        <p class="p-dotTxt">데이터 추가 혜택이 있어요</p>
                        {{#if data.dataAddtionOption.dataOption}}
                            <div class="dl-comp">
                                <p class="title">데이터 옵션</p>
                                <ul>
                                    <li><span class="tod-blind">{{data.curPlan.prodNm}}</span> {{{data.curPlan.dataAddtionOption.dataOption}}}</li>
                                    <li><span class="tod-blind">{{data.comparePlan.prodNm}}</span> {{{data.comparePlan.dataAddtionOption.dataOption}}}</li>
                                </ul>
                            </div>
                        {{/if}}
                        {{#if data.dataAddtionOption.sharingDataLimit}}
                            <div class="dl-comp">
                                <p class="title">공유가능 데이터 한도</p>
                                <ul>
                                    <li><span class="tod-blind">{{data.curPlan.prodNm}}</span> {{{data.curPlan.dataAddtionOption.sharingDataLimit}}}</li>
                                    <li><span class="tod-blind">{{data.comparePlan.prodNm}}</span> {{{data.comparePlan.dataAddtionOption.sharingDataLimit}}}</li>
                                </ul>
                            </div>
                        {{/if}}
                        {{#if data.dataAddtionOption.tetheringOption}}
                            <div class="dl-comp">
                                <p class="title">테더링 한도</p>
                                <ul>
                                    <li><span class="tod-blind">{{data.curPlan.prodNm}}</span> {{{data.curPlan.dataAddtionOption.tetheringOption}}}</li>
                                    <li><span class="tod-blind">{{data.comparePlan.prodNm}}</span> {{{data.comparePlan.dataAddtionOption.tetheringOption}}}</li>
                                </ul>
                            </div>
                        {{/if}}
                        {{#if data.dataAddtionOption.dataRefill}}
                            <div class="dl-comp">
                                <p class="title">데이터 리필하기</p>
                                <ul>
                                    <li><span class="tod-blind">{{data.curPlan.prodNm}}</span> {{{data.curPlan.dataAddtionOption.dataRefill}}}</li>
                                    <li><span class="tod-blind">{{data.comparePlan.prodNm}}</span> <span class="s-txt">{{{data.comparePlan.dataAddtionOption.dataRefill}}}</span></li>
                                </ul>
                            </div>
                        {{/if}}
                    </div>
                {{/if}}
            </div>
            <div class="rn-comp-box">
                <h3 class="title"><i class="p-icon16-phone"></i> 음성</h3>
                <ul class="tb-comp">
                    <li>
                        <span class="tod-blind">{{data.curPlan.prodNm}}</span> {{{data.curPlan.basOfrVcallTmsCtt.value}}}
                        {{#if data.curPlan.basOfrVcallTmsCtt.detail}}
                            <p class="s-txt">{{{data.curPlan.basOfrVcallTmsCtt.detail}}}</p>
                        {{/if}}
                    </li>
                    <li>
                        <span class="tod-blind">{{data.comparePlan.prodNm}}</span> {{{data.comparePlan.basOfrVcallTmsCtt.value}}}
                        {{#if data.comparePlan.basOfrVcallTmsCtt.detail}}
                            <p class="s-txt">{{{data.comparePlan.basOfrVcallTmsCtt.detail}}}</p>
                        {{/if}}
                    </li>
                </ul>
            </div>
            <div class="rn-comp-box">
                <h3 class="title"><i class="p-icon16-sms"></i> 문자</h3>
                <ul class="tb-comp">
                    <li><span class="tod-blind">{{data.curPlan.prodNm}}</span> {{{data.curPlan.basOfrCharCntCtt}}}</li>
                    <li><span class="tod-blind">{{data.comparePlan.prodNm}}</span> {{{data.comparePlan.basOfrCharCntCtt}}}</li>
                </ul>
            </div>
            {{#if data.discountBenefits}}
                <div class="rn-benefit">
                    <h3 class="title">할인혜택</h3>
                    {{#each data.discountBenefits}}
                        <div class="tb-comp-cont">
                            <p class="title"><i class="p-icon16-check"></i>{{{benefitName}}}</ㅔ>
                            <ul class="tb-comp">
                                <li>
                                    <span class="tod-blind">{{../data.curPlan.prodNm}}</span>
                                    {{#if curPlan.text}}
                                        {{{curPlan.text}}}
                                    {{/if}}
                                    {{#if curPlan.prePrice}}
                                        <del>{{{curPlan.prePrice}}}</del><p class="price">{{{curPlan.curPrice}}}</p>
                                    {{/if}}
                                </li>
                                <li>
                                    <span class="tod-blind">{{../data.comparePlan.prodNm}}</span> 
                                    {{#if comparePlan.text}}
                                        {{{comparePlan.text}}}
                                    {{/if}}
                                    {{#if comparePlan.prePrice}}
                                        <del>{{{comparePlan.prePrice}}}</del><p class="price">{{{comparePlan.curPrice}}}</p>
                                    {{/if}}
                                </li>
                            </ul>
                        </div>
                    {{/each}}
                </div>
            {{/if}}
            <div class="rn-benefit">
                <h3 class="title">추가혜택</h3>
                {{#each data.additionBenefits}}
                    <div class="tb-comp-cont">
                        <p class="title">
                            {{#each benefitKind}}
                            <i class="p-icon16-{{benefitClass}}"></i> {{benefitName}} 
                            {{/each}}
                        </p>
                        <ul class="tb-comp">
                            <li>
                                <span class="tod-blind">{{../data.curPlan.prodNm}}</span>
                                {{#each curPlan}}
                                    {{#if text}}
                                        <p class="txt">{{{text}}}</p>
                                    {{/if}}
                                    {{#if prePrice}}
                                        <span class="s-price">
                                            <del>{{{prePrice}}}</del>
                                            <i class="icon-arr">&rarr;</i> 
                                            <em>{{{curPrice}}}</em>
                                        </span>
                                    {{/if}}
                                    {{#if option}}
                                        <p class="s-txt nmp-fc-orange">{{{option}}}</p>
                                    {{/if}}
                                {{/each}}
                            </li>
                            <li>
                                <span class="tod-blind">{{../data.comparePlan.prodNm}}</span>
                                {{#each comparePlan}}
                                    {{#if text}}
                                        <p class="txt">{{{text}}}</p>
                                    {{/if}}
                                    {{#if prePrice}}
                                        <span class="s-price">
                                            <del>{{{prePrice}}}</del>
                                            <i class="icon-arr">&rarr;</i> 
                                            <em>{{{curPrice}}}</em>
                                        </span>
                                    {{/if}}
                                    {{#if option}}
                                        <p class="s-txt nmp-fc-orange">{{{option}}}</p>
                                    {{/if}}
                                {{/each}}
                            </li>
                        </ul>
                    </div>
                {{/each}}
            </div>
            <div class="tod-nmp-btn-wrap">
                <button type="button" class="tod-nmp-btn46 arr changePlan" data-prod-id="{{data.comparePlan.prodId}}">{{data.comparePlan.prodNm}} 요금제 변경하기</button>
            </div>
        </section>
    </div>
    <!--// .container-wrap -->
    <!-- .popup-closeBtn -->
    <button class="prev-step">취소</button>
    <!--// .popup-closeBtn -->
</div>
        <!--// .popup hbs -->