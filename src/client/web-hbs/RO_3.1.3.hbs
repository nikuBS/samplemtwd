<div class="popup-page tw-popup  fixed-bottom h60 pb0 {{titleClass}}">
    {{#if titleNm}}
        <!-- #header -->
        <div class="header-wrap">
            <div class="page-header">
                <div class="header-ti">
                    <h1>{{titleNm}}</h1>
                </div>
            </div>
        </div>
        <!--// #header -->
    {{/if}}
    <!--// #header -->
    <!-- .container-wrap -->
    <div class="container-wrap">
        <h2 id="contents-area" tabindex="-1"><span class="blind">본문시작</span></h2>
        <div class="container">
            <hr class="cont-sp type1" aria-hidden="true">
            <!-- .cont-box -->
            <div class="cont-box noborder">
                <!-- offering -->
                <div class="tod-offer-wrap tc">
                    <p class="offer-tit">혜택이 계속 됩니다.</p>
                    <div class="offer-img pt20">
                        <img src="{{cdn}}/img/product/offer-img-flo.png" alt="">
                    </div>
                    <div class="offer-list mt30">
                        <dl>
                            <dt>FLO 앤 데이터의 3가지 즐거움</dt>
                            <dd>
                                <p class="tod-rblue-wrap">
                                    <span class="num">01</span>
                                    <span class="txt">나의 취향에 맞게 추천되는 음악</span>
                                </p>
                            </dd>
                            <dd>
                                <p class="tod-rblue-wrap">
                                    <span class="num">02</span>
                                    <span class="txt">전문가가 선곡한 플레이리스트</span>
                                </p>
                            </dd>
                            <dd>
                                <p class="tod-rblue-wrap">
                                    <span class="num">03</span>
                                    <span class="txt">전용데이터 매월 3GB 무제한 듣기</span>
                                </p>
                            </dd>
                        </dl>
                    </div>
                </div>
                <!-- //offering -->
            </div>
            <!-- //.cont-box -->
        </div>

        <!-- 하단 fixed 버튼 -->
        <div class="bt-fixed-area tod-offer-bt-area">
            <button type="button" class="btn-floating btn-style2 fe-btn_close">닫기</button>
        </div>
        <!-- //하단 fixed 버튼 -->
    </div>
    <!--// .container-wrap -->
    <!-- .popup-closeBtn -->
    <button class="popup-closeBtn"><span class="blind">팝업 페이지 닫기</span></button>
    <!--// .popup-closeBtn -->
</div>