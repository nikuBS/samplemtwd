<div class="popup-page tw-popup  fixed-bottom h120 {{titleClass}}">
    {{#if titleNm}}
        <!-- #header -->
        <div class="header-wrap">
            <div class="page-header">
                <div class="header-ti">
                    <h1>{{titleNm}}</h1>
                </div>
            </div>
        </div>
        <!--// #header -->
    {{/if}}
    <!--// #header -->
    <!-- .container-wrap -->
    <div class="container-wrap">
        <h2 id="contents-area" tabindex="-1"><span class="blind">본문시작</span></h2>
        <div class="container">
            <hr class="cont-sp type1" aria-hidden="true">
            <!-- .cont-box -->
            <div class="cont-box noborder">
                <!-- offering -->
                <div class="tod-offer-wrap tc">
                    <p class="offer-tit offer-txt-3">
                        <span class="tx-medium">
                            wavve를 즐길 수 있는 다른 이용권들이 있어요! <br>
                            다른 상품으로 변경 하시겠어요?
                        </span>
                    </p>
                   <div class="tod-offer-prd-options mt20">
                        <fieldset>
                            <legend>상품변경 옵션선택</legend>
                            <div class="item">
                                <span class="custom-form"><input class='option-select' type="radio" id="rad1-1" name="rad1" value='NA00006584' checked><span class="r-type1"></span></span>
                                <label for="rad1-1">
                                    <strong class="label-tit">wavve 앤 데이터 플러스 (12,300원) :</strong>
                                    실시간 방송 / VOD 2인용 + 일 1GB (소진 시 3Mbps)
                                </label>
                            </div>
                            <div class="item">
                                <span class="custom-form"><input class='option-select' type="radio" id="rad1-2" name="rad1" value='NA00006577'><span class="r-type1"></span></span>
                                <label for="rad1-2">
                                    <strong class="label-tit">wavve 앤 데이터 (9,900원) :</strong>
                                    실시간 방송 / VOD 1인용 + 일 1GB (소진 시 3Mbps)
                                </label>
                            </div>
                        </fieldset>
                    </div>
            
                    <p class="offer-txt-2 mt20">
                        <span class="tx-medium">
                            wavve의 Quick VOD, 알고 계신가요?<br>
                            본방 시작 5분만에 업로드된다는 사실!
                        </span>
                    </p> 
                </div>
                <!-- //offering -->
            </div>
            <!-- //.cont-box -->
        </div>

        <!-- 하단 fixed 버튼 -->
        <div class="bt-fixed-area tod-offer-bt-area">
            <ul class="bt-slice full">
                <li class="bt-red1"><a href="/product/callplan?prod_id=" class="fe-btn-linkProduct" data-xt_eid="{{xt.eid1}}" data-xt_csid="{{xt.closeCsid}}" data-xt_action="BV" data-xt_action2="BC">선택 상품으로 변경하기</a></li>
                <li class="bt-offer">
                    <span><a href="#" class="tod-offer-link fe-btn_change" data-xt_eid="{{xt.eid1}}" data-xt_csid="{{xt.changeCsid}}" data-xt_action="BV" data-xt_action2="BC">해지하기</a></span>
                </li>
            </ul>
        </div>
        <!-- //하단 fixed 버튼 -->
    </div>
    <!--// .container-wrap -->
    <!-- .popup-closeBtn -->
    <button class="popup-closeBtn" data-xt_eid="{{xt.eid1}}" data-xt_csid="{{xt.topCloseCsId}}" data-xt_action="BV" data-xt_action2="BC"><span class="blind">팝업 페이지 닫기</span></button>
    <!--// .popup-closeBtn -->
</div>