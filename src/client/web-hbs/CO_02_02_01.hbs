<!-- .popup hbs -->
<div class="popup-page tw-popup nobg"><!-- 하단에 fixed 버튼으로 여백이 필요할때 .fixed-bottom 기본60여백 / 높이 30단위 class 지원 .h30, .h60, .h90 ... -->
    <!-- #header -->
    <div class="header-wrap">
        <div class="page-header">
            <div class="header-ti">
                <h1>금융거래용 본인인증</h1>
            </div>
        </div>
    </div>
    <!--// #header -->
    <!-- .container-wrap -->
    <div class="container-wrap">
        <h2 class="blind">내용</h2>
        <div class="container">
            <!-- .cont-box -->
            <div class="cont-box">
                <!-- .widget -->
                <div class="widget">
                    <div class="widget-box step">
                        <h3 class="step-ti"><em>STEP 01</em>본인확인</h3>
                        <ul class="step-list">
                            <li class="on">1<span class="blind">본인확인</span></li><!-- 웹접근성 수정 -->
                            <li>2<span class="blind">고객정보 활용동의</span></li>
                        </ul>
                    </div>
                </div>
                <!-- //.widget -->
            </div>
            <!--// .cont-box -->
            <hr class="cont-sp type1" aria-hidden="true"/>
            <!-- .cont-box -->
            <div class="cont-box nogaps">
                <div class="box-certifi-list">
                    <ul class="certifi-sel-list">
                        {{#if data.methods.skSms.use}}
                        <li class="{{#if data.methods.skSms.block}}lock{{/if}}">
                            {{#if data.methods.skSms.block}}
                                <div class="lock-layer">
                                    <div class="txtBox">
                                        <img src="{{cdn}}/img/common/lock_layer_icon.png" alt="점검중 느낌표 아이콘">
                                        <p>점검 중</p>
                                    </div>
                                </div>
                            {{/if}}
                            <button id="fe-bt-sk">
                                <span class="list-cell">
                                    <span class="ico-certifi-list type01" aria-hidden="false"></span>
                                </span>
                                <span class="list-cell">
                                        <span class="list-ti">SK텔레콤 SMS 인증</span>
                                        <span class="list-tx">고객님 명의의 SK텔레콤 휴대폰 번호로 SMS 인증합니다.</span>
                                    </span>
                                <span class="ico"></span>
                            </button>
                        </li>
                        {{/if}}
                        {{#if data.methods.otherSms.use}}
                        <li class="{{#if data.methods.otherSms.block}}lock{{/if}}">
                            {{#if data.methods.otherSms.block}}
                                <div class="lock-layer">
                                    <div class="txtBox">
                                        <img src="{{cdn}}/img/common/lock_layer_icon.png" alt="점검중 느낌표 아이콘">
                                        <p>점검 중</p>
                                    </div>
                                </div>
                            {{/if}}
                            <button id="fe-bt-kt" title="새창">
                                <span class="list-cell">
                                    <span class="ico-certifi-list type02" aria-hidden="false"></span>
                                </span>
                                <span class="list-cell">
                                    <span class="list-ti">KT SMS 인증</span>
                                        <span class="list-tx">고객님 명의의 KT 휴대폰 번호로  SMS 인증합니다.</span>
                                    </span>
                                <span class="ico"></span>
                            </button>
                        </li>
                        <li class="{{#if data.methods.otherSms.block}}lock{{/if}}">
                            {{#if data.methods.otherSms.block}}
                                <div class="lock-layer">
                                    <div class="txtBox">
                                        <img src="{{cdn}}/img/common/lock_layer_icon.png" alt="점검중 느낌표 아이콘">
                                        <p>점검 중</p>
                                    </div>
                                </div>
                            {{/if}}
                            <button id="fe-bt-lg" title="새창">
                                <span class="list-cell">
                                    <span class="ico-certifi-list type03" aria-hidden="false"></span>
                                </span>
                                <span class="list-cell">
                                        <span class="list-ti">LG U+ 인증</span>
                                        <span class="list-tx">고객님 명의의 LG U+ 휴대폰 번호로 SMS 인증합니다.</span>
                                    </span>
                                <span class="ico"></span>
                            </button>
                        </li>
                        {{/if}}
                        {{#if data.methods.ipin.use}}
                        <li class="{{#if data.methods.ipin.block}}lock{{/if}}">
                            {{#if data.methods.ipin.block}}
                                <div class="lock-layer">
                                    <div class="txtBox">
                                        <img src="{{cdn}}/img/common/lock_layer_icon.png" alt="점검중 느낌표 아이콘">
                                        <p>점검 중</p>
                                    </div>
                                </div>
                            {{/if}}
                            <button id="fe-bt-ipin" title="새창">
                                <span class="list-cell">
                                    <span class="ico-certifi-list type04" aria-hidden="false"></span>
                                </span>
                                <span class="list-cell">
                                        <span class="list-ti">아이핀 인증</span>
                                        <span class="list-tx">고객님 명의의 아이핀으로 인증합니다.</span>
                                    </span>
                                <span class="ico"></span>
                            </button>
                        </li>
                        {{/if}}
                        {{#if data.methods.bio.use}}
                        <li class="{{#if data.methods.bio.block}}lock{{/if}}">
                            {{#if data.methods.bio.block}}
                                <div class="lock-layer">
                                    <div class="txtBox">
                                        <img src="{{cdn}}/img/common/lock_layer_icon.png" alt="점검중 느낌표 아이콘">
                                        <p>점검 중</p>
                                    </div>
                                </div>
                            {{/if}}
                            <button id="fe-bt-bio">
                                <span class="list-cell">
                                    <span class="ico-certifi-list type05" aria-hidden="false"></span>
                                </span>
                                <span class="list-cell">
                                        <span class="list-ti">생체 인증</span>
                                        <span class="list-tx">고객님의 생체정보(지문,Face ID)로 인증합니다.</span>
                                    </span>
                                <span class="ico"></span>
                            </button>
                        </li>
                        {{/if}}
                    </ul>
                </div>
            </div>
            <!--// .cont-box -->
        </div>
    </div>
    <!-- // .container-wrap -->
    <!-- .popup-closeBtn -->
    <button class="prev-step tw-popup-closeBtn">취소</button>
    <!--// .popup-closeBtn -->
</div>
<!-- // .popup hbs -->