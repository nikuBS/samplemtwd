<div class="popup-page nobg tw-popup fixed-bottom">
    <!-- #header -->
    <div class="header-wrap">
        <div class="page-header">
            <div class="header-ti">
                <h1>양도하기 확인</h1>
            </div>
        </div>
    </div>
    <!--// #header -->
    <!-- .container-wrap -->
    <div class="container-wrap">
        <h2 class="blind">내용</h2>
        <div class="container">

            <!-- .cont-box -->
            <div class="cont-box nogaps-btm">
                <div class="charge-guide-wrap">
                    <div class="charge-cont">
                        <span class="tit02 pt0 pb40"><span class="tx-bold">포인트 양도</span>를<br />완료 하시겠습니까?</span>
                        <span class="sub-disc01">양도 포인트</span>
                        <span class="tit tx-blue"><span class="charge-txt">{{ giver.inputPoint }}</span>P</span>
                    </div>
                    <div class="item-list">
                        <ul>
                            <li>
                                <dl>
                                    <dt>주는 회선</dt>
                                    <dd>
                                        <div class="single-list">
                                                    <span class="title">
                                                        <span class="tx-bold">{{ giver.custNm }}</span>
                                                        <span class="tx-sub">{{ giver.svcNum }}</span>
                                                    </span>
                                            <span class="num"><em>{{ giver.remain }}</em><span class="unit">P</span></span>
                                        </div>
                                    </dd>
                                </dl>
                            </li>
                            <li>
                                <dl>
                                    <dt>받는 회선</dt>
                                    <dd>
                                        <div class="single-list">
                                                    <span class="title">
                                                        {{#if receiver.relNm}}
                                                        <span class="tx-bold">{{ receiver.custNm }}</span>
                                                        {{/if }}
                                                        <span class="tx-sub">{{ receiver.svcNum }}</span>
                                                    </span>
                                            <span class="num"><em>{{ receiver.remain }}</em><span class="unit">P</span></span>
                                        </div>
                                    </dd>
                                </dl>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!--// .cont-box -->

            <div class="bt-fixed-area">
                <ul class="bt-slice full">
                    <li class="bt-red1">
                        <button class="fe-btn-submit">양도 완료</button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!--// .container-wrap -->
    <!-- .popup-closeBtn -->
    <button class="popup-closeBtn fe-common-back"><span class="blind">팝업 페이지 닫기</span></button>
    <!--// .popup-closeBtn -->
</div>