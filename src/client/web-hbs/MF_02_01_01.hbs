<!-- .popup hbs -->
<div class="popup-page nobg tw-popup fixed-btn"><!-- .fixed-btn 하단에 고정된 버튼이 있는 경우 -->
    <!-- #header -->
    <div class="header-wrap">
        <div class="page-header">
            <div class="header-ti">
                <h1>조건변경</h1>
            </div>
        </div>
    </div>
    <!--// #header -->
    <!-- .container-wrap -->
    <div class="container-wrap">
        <h2 class="blind">내용</h2>
        <div class="container">

            <div class="ti-caption-gray">
                <h3 class="tit">기간</h3>
            </div>
            <!-- .cont-box -->
            <div class="cont-box">
                <div class="widget">
                    <div class="widget-box tube">
                        <ul class="tube-list three" role="radiogroup" data-target="dateBtnArea">

                            {{!-- 주석 : 조건변경 날짜 --}}

                            {{# each data as |rootItem rootIndex| }}

                                {{# each rootItem.dateList as |dateList dateListIndex| }}

                                    {{#with ../this.dateListVal as |dateListVal|}}
                            <li role="radio" aria-checked="false" data-target="hbDateRadioBtn" ><input type="radio" name="senddata" value="{{#index_of dateListVal @index}}{{/index_of}}" title="{{ dateList }}">{{#date_txt dateList }}{{/date_txt}}</li>
                                    {{/with}}

                                {{/each}}

                            {{/each}}

                        </ul>
                    </div>
                </div>
            </div>
            <!--// .cont-box -->

            <div class="ti-caption-gray">
                <h3 class="tit">회선</h3>
            </div>
            <div class="cont-box nogaps">
                <div class="list-comp-input">
                    <div class="widget">
                        <div class="widget-box radio">
                            <ul class="select-list" role="group" data-target="lineSelectArea">

                                {{!-- 주석 : 조건변경 회선 --}}
                                {{# each data as |rootItem rootIndex| }}

                                    {{# each rootItem.lineList as |lineList index|}}

                                        {{#if @first}}
                                            <li data-target="hbLineRadioBtn" class="radiobox type01 checked" role="radio" aria-checked="true"><!-- 체크 상태일 경우 .checked 클래스 추가, aria-checked="true" -->
                                                <input type="radio" name="radio" value="" title="서비스 전체" aria-labelledby="aria-comp-radio" checked /><!-- 체크상태일 경우 checked="checked" -->
                                                <div class="comp-list-layout" id="aria-comp-radio" aria-hidden="true">
                                                    <p class="layout-text">
                                                        <span class="mtext ellipsis">{{lineList.svcType}}</span>
                                                    </p>
                                                </div>
                                            </li>
                                        {{else}}
                                            <li data-target="hbLineRadioBtn" class="radiobox type01 checked" role="radio" aria-checked="false"><!-- 체크 상태일 경우 .checked 클래스 추가, aria-checked="true" -->
                                                <input type="radio" name="radio" value="{{lineList.svcMgmtNum}}" title="{{lineList.svcType}}({{lineList.label}})" aria-labelledby="aria-comp-radio{{index}}" /><!-- 체크상태일 경우 checked="checked" -->
                                                <div class="comp-list-layout" id="aria-comp-radio{{index}}" aria-hidden="true">
                                                    <p class="layout-text">
                                                        <span class="mtext ellipsis">{{lineList.svcType}}({{lineList.label}})</span>
                                                    </p>
                                                </div>
                                            </li>

                                        {{/if}}

                                    {{/each}}
                                {{/each}}



                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <ul class="bt-slice full">
                <li class="bt-red1">
                    <button data-target="hbPopChangeBtn">변경하기</button>
                </li>
            </ul>
        </div>
    </div>
    <!--// .container-wrap -->
    <!-- .popup-closeBtn -->
    <button class="popup-closeBtn"><span class="blind">팝업 페이지 닫기</span></button>
    <!--// .popup-closeBtn -->
</div>
<!--// .popup hbs -->