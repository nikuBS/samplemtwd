<div class="popup tw-popup">
    <div class="popup-page nobg"><!-- .half 화면에서 50%로 보여질때 -->
        <!-- #header -->
        <div class="header-wrap">
            <div class="page-header">
                <div class="header-ti">
                    <h1>납부가능일 선택</h1>
                </div>
            </div>
        </div>
        <!--// #header -->
        <!-- #contents -->
        <div id="contents" class="container-wrap">
            <h2 class="blind">내용</h2>
            <div class="container">
                <!-- .cont-box -->
                {{#each claimList}}
                <div class="cont-box">
                    <div class="charge-box">
                        <h2>청구일정</h2>
                        <ul class="charge-list">
                                <li>
                                    <dl>
                                        <dt>{{index}}차 청구</dt>
                                        {{#if isCycle}}
                                            {{#if lastMt}}
                                                <dd>{{pStartDay}}일~{{pEndDay}}일까지 매일<br/>(인출일이 휴일인 경우 다음날 인출)</dd>
                                            {{/if}}
                                            {{#if thisMt}}
                                                <dd>{{tStartDay}}일~{{tEndDay}}일까지 매일<br/>(인출일이 휴일인 경우 다음날 인출)</dd>
                                            {{/if}}
                                        {{else}}
                                            <ul>
                                                {{#each list}}
                                                    <li>{{index}}회차  {{value}}</li>
                                                {{/each}}
                                            </ul>
                                        {{/if}}
                                    </dl>
                                </li>
                        </ul>
                    </div>
                </div>
                {{/each}}
                <!--// .cont-box -->
                {{#each paymentList}}
                <hr class="cont-sp type1" aria-hidden="true"/>
                <!-- .cont-box -->
                <div class="cont-box nogaps pt20">
                    <p class="con-tit0 pl16 pb6">납부가능일 선택</p>
                    <div class="list-comp-input">
                        <div class="widget">
                            <div class="widget-box radio">
                                <ul class="select-list" role="group">
                                        <li class="radiobox type01-big mid-top" role="radio" aria-checked="false">
                                            <input type="radio" name="radio" value="" title="{{title}}" aria-labelledby="aria-comp-radio1" />
                                            <div class="comp-list-layout" id="aria-comp-radio1" aria-hidden="true">
                                                <p class="layout-text">
                                                    <span class="mtext">{{value}}</span>
                                                </p>
                                            </div>
                                        </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
                <!--// .cont-box -->
                <hr class="cont-sp type1" aria-hidden="true"/>
                <!-- .cont-box -->
                <div class="cont-box nogaps-btm">
                    <h3 class="tx-bold">꼭 확인해 주세요</h3>
                    <ul class="noti-list02">
                        <li>
                            <button type="button" class="tip-view-btn" id="MF_02_06_tip_01" page-id="{{pageid}}" aria-haspopup="true">
                                납부가능일 선택 안내<span class="tip-view">TIP</span>
                            </button>
                        </li>
                    </ul>
                </div>
                <!--// .cont-box -->
                <ul class="bt-slice full">
                    <li class="bt-red1">
                        <button disabled>선택완료</button>
                    </li>
                </ul>
            </div>
        </div>
        <!--// #contents -->
        <!-- .popup-closeBtn -->
        <button class="popup-closeBtn"><span class="blind">팝업 페이지 닫기</span></button>
        <!--// .popup-closeBtn -->
    </div>
    <div class="popup-blind"></div>
</div>
