<!-- .popup hbs -->
<div class="popup-page tw-popup fixed-bottom h60">
    <!-- 하단에 fixed 버튼으로 여백이 필요할때 .fixed-bottom 기본60여백 / 높이 30단위 class 지원 .h30, .h60, .h90 ... -->
    <!-- #header -->
    <div class="header-wrap">
        <div class="page-header">
            <div class="header-ti">
                <h1>TB끼리 온가족프리 혜택 변경</h1>
            </div>
        </div>
    </div>
    <!--// #header -->
    <!-- .container-wrap -->
    <div class="container-wrap">
        <h2 class="blind">내용</h2>
        <div class="container">

            <!-- .cont-box -->
            <div class="cont-box">
                <div class="chk-person-info">
                    <p class="name">{{name}}<i class="icon-me ml5"><span class="blind">나</span></i></p>
                    <p class="number">{{number}}</p>
                </div>
            </div>
            <!--// .cont-box -->

            <hr class="cont-sp type1" aria-hidden="true" />

            <!-- .cont-box -->
            <div class="cont-box nogaps-btm noborder">
                <ul class="form-data-list">
                    <li>
                        <label class="tit" for="flab01">혜택2 선택(휴대폰 번호 입력)</label>
                        <span class="inputbox">
                            <span class="input">
                                <input id="flab01" type="text" inputmode="numeric" min="0" pattern="[0-9]*" aria-describedby="fe-phone-error" value="{{benefit}}" placeholder="숫자만 입력" title="혜택2 선택(휴대폰 번호 숫자만 입력)">
                                <button class="cancel" style="display: none;" aria-hidden="true"><span class="blind">삭제</span></button>
                            </span>
                        </span>
                        <p class="val-txt none" id="fe-phone-error" aria-hidden="true">휴대폰 번호가 올바르지 않습니다.</p><!-- 휴대폰번호 잘못입력시 -->
                    </li>
                </ul>
            </div>
            <!--// .cont-box -->

            <div class="bt-fixed-area">
                <ul class="bt-slice full">
                    <li class="bt-red1">
                        <button disabled>변경하기</button><!-- 휴대폰 입력완료시 disabled 속성 삭제 -->
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- // .container-wrap -->
    <!-- .popup-closeBtn -->
    <button class="prev-step tw-popup-closeBtn"><span class="blind">팝업 페이지 닫기</span></button>
    <!--// .popup-closeBtn -->
</div>
<!-- // .popup hbs -->