    <div class="popup tw-popup">
        <div class="popup-page nobg layer"><!-- .no-btn 하단에 버튼이 없을 경우 -->
            <!-- .container-wrap -->
            <div class="container-wrap">
                <h2 class="blind">내용</h2>
                <div>
                    {{#each data}}
                        <!-- .cont-box -->
                        <div class="cont-box nogaps">
                            <div class="box-chk-link" style="padding-bottom:55px">
                                {{#if type}}<p class="link-long-ti">{{type}}</p>{{/if}}
                                <ul class="chk-link-list">
                                    {{#each list}}
                                        <li>
                                            <button {{#ifCond option '!==' 'checked'}}class="{{option}}"{{/ifCond}} {{{attr}}}>
                                                <div class="link-info">
                                                    <span class="info-value" id="act-item-{{@index}}">{{value}}</span> <!-- 웹 접근성 라디오 항목 매핑 id="act-item-" -->
                                                    {{#if explain}}
                                                        <p class="tx-explain">{{explain}}</p>
                                                    {{/if}}
                                                    <span class="ico">
                                                        <span class="table-cell right">
                                                            <span class="custom-form">
                                                                <input type="radio" id="ra1" name="r1" aria-labelledby="act-item-{{@index}}"
                                                                       {{#ifCond option '===' 'checked'}}checked{{/ifCond}}> <!-- 웹 접근성 라디오 항목 매핑 id="act-item-" -->
                                                                <span class="r-type1"></span>
                                                            </span>
                                                            <span class="link"></span>
                                                        </span>
                                                    </span>
                                                </div>
                                            </button>
                                        </li>
                                    {{/each}}
                                </ul>
                                <div class="btn-more" style="display:none">
                                    <button type="button">더보기</button>
                                </div>
                                <button type="button" class="btn-floating btn-style3 tw-popup-closeBtn" style="position:fixed; bottom:0;">닫기</button>
                            </div>
                        </div>
                        <!--// .cont-box -->
                    {{/each}}
                </div>
            </div>
            <!--// .container-wrap -->
        </div>
        <div class="popup-blind"></div>
    </div>
